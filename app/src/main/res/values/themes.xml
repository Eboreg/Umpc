<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Umpc" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Umpc.Starting" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Umpc</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_icon</item>
        <item name="windowSplashScreenBackground">@color/splash_background</item>
    </style>

    <style name="Theme.Umpc.Starting.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">4dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.Umpc.Starting.AppWidgetContainer" parent="Theme.Umpc.Starting.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0dp</item>
    </style>
</resources>
